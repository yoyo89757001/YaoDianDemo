<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:orientation="vertical"
    android:id="@+id/jiemian"
    android:background="@drawable/huzhaobg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

<RelativeLayout
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <ImageView
        android:layout_width="62dp"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/dd"
        android:src="@drawable/fanhui"
        android:layout_height="62dp" />


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/dd22"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yaodianlogo"
            android:layout_height="40dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="人证比对智能识别系统"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="INTELLIGENT IDENTIFICAION SYSTEM"
                android:textSize="12sp"
                android:textColor="@color/write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="姓名:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="62dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/blake"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="身份证:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shenfenzheng"
                    android:layout_width="148dp"
                    android:layout_height="30dp"
                    android:textSize="12sp"
                    android:focusable="false"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:gravity="center"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="姓别:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/xingbie"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:gravity="center"
                    android:textColor="@color/blake" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="名族:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/mingzu"
                    android:layout_width="36dp"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="出生:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/chusheng"
                    android:layout_width="90dp"
                    android:textSize="12sp"
                    android:focusable="false"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="电话:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dianhua"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:maxLength="11"
                    android:textSize="12sp"
                    android:inputType="phone"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="发证\n机关:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/jiguan"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="有效\n期限:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/qixian"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="@color/blake"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/write" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="住址:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dizhi"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="房号:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />



                <EditText
                    android:id="@+id/fanghao"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="退房时间:"
                    android:textColor="@color/write"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chepai"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:gravity="center"
                    android:textColor="@color/blake"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zhengjian"
                        android:layout_width="150dp"
                        android:scaleType="fitXY"
                        android:layout_height="160dp"
                        android:background="@drawable/zidonghuoqu5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="1"
                        android:layout_marginLeft="8dp"
                        android:text="证件照"
                        android:textColor="@color/write"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/paizhao"
                        android:layout_width="150dp"
                        android:scaleType="fitXY"
                        android:layout_height="150dp"
                        android:background="@drawable/zidonghuoqu5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:text="现场照"
                        android:ems="1"
                        android:textColor="@color/write"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比对结果:"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/write"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/jieguo"
                        android:layout_width="112dp"
                        android:focusable="false"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="-30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相 似 度 :"
                        android:textColor="@color/write"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/xiangsidu"
                        android:layout_width="112dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:focusable="false"
                        android:gravity="center"
                        android:textColor="@color/blake"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="top|center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="保 存"
            android:textSize="14sp"
            android:id="@+id/wancheng"
            android:layout_marginRight="20dp"
            android:textColor="@color/write"
            android:background="@drawable/jiaohu"
            android:layout_width="120dp"
            android:layout_height="42dp" />

    </LinearLayout>
</LinearLayout>




</RelativeLayout>