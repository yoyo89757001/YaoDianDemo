<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="wrap_content">


    <TextView
        android:textSize="18sp"
        android:text="编辑"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/blake2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginTop="16dp"
        android:background="@color/colorBar_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:textSize="16sp"
            android:id="@+id/erer"
            android:text="药名:"
            android:layout_centerVertical="true"
            android:textColor="@color/blake2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/erer"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:id="@+id/yaoming"
            android:textColor="@color/blake2"
            android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorBar_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:textSize="16sp"
            android:id="@+id/erer22"
            android:text="数量:"
            android:layout_centerVertical="true"
            android:textColor="@color/blake2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/erer22"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="number"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:id="@+id/shuliang"
            android:textColor="@color/blake2"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/tupian"
        android:layout_marginLeft="30dp"
        android:background="@color/colorBar_bg"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <Button
            android:textColor="@color/write"
            android:textSize="16sp"
            android:text="确认"
            android:id="@+id/queren"
            android:layout_marginRight="12dp"
            android:background="@drawable/jiaohu5"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <Button
            android:textColor="@color/write"
            android:textSize="16sp"
            android:text="取消"
            android:id="@+id/quxiao"
            android:layout_marginLeft="12dp"
            android:background="@drawable/jiaohu3"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>