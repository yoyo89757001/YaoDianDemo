<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/beijing"
    android:layout_height="match_parent"
    tools:context="com.xiaojun.yaodiandemo.ui.ShuaChuFangActivity">

    <RelativeLayout
        android:id="@+id/fanhui"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/gg"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="16dp" />

        <TextView
            android:textColor="@color/write"
            android:textSize="16sp"
            android:text="返回"
            android:id="@+id/t_fanhui"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/write"
            android:textSize="20sp"
            android:text="刷处方单"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/write"
            android:textSize="16sp"
            android:text="添加"
            android:visibility="gone"
            android:background="@drawable/jiaohu"
            android:id="@+id/tianjia"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="60dp"
            android:layout_height="40dp" />


        <View
            android:background="@color/write"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"/>

    </RelativeLayout>



    <ImageView
        android:id="@+id/tupian"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/hhyy"
        android:layout_below="@+id/fanhui"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/hhyy"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Button
            android:textColor="@color/write"
            android:textSize="18sp"
            android:text="保存"
            android:id="@+id/baocun"
            android:layout_marginRight="16dp"
            android:background="@drawable/jiaohu5"
            android:layout_width="110dp"
            android:layout_height="match_parent" />
        <Button
            android:textColor="@color/write"
            android:textSize="18sp"
            android:text="重拍"
            android:id="@+id/chongpai"
            android:layout_marginLeft="16dp"
            android:background="@drawable/jiaohu3"
            android:layout_width="110dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
