<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beijing"
    android:layout_height="match_parent"
    tools:context="com.xiaojun.yaodiandemo.ui.GouMaiActivity">

    <RelativeLayout
        android:id="@+id/fanhui"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/gg"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="16dp" />

        <TextView
            android:textColor="@color/write"
            android:textSize="16sp"
            android:text="返回"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/write"
            android:textSize="20sp"
            android:text="购买处方药"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

<View
    android:background="@color/write"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="0.8dp"/>


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:id="@+id/dengji2"
                android:layout_centerInParent="true"
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="刷身份证"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

                <ImageView
                    android:layout_toRightOf="@+id/dengji2"
                    android:src="@drawable/dagou"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/im1"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:text="+"
            android:textSize="22sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <TextView
        android:id="@+id/dengji3"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:background="@drawable/jiaohu7"
        android:gravity="center"
        android:text="刷脸"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_toRightOf="@+id/dengji3"
        android:src="@drawable/dagou"
        android:layout_marginLeft="10dp"
        android:id="@+id/im2"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

        <TextView
            android:id="@+id/tongguo"
            android:textColor="@color/write"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/im2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>

        <TextView
            android:text="+"
            android:textSize="22sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/dengji4"
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="刷药"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_toRightOf="@+id/dengji4"
                android:src="@drawable/dagou"
                android:layout_marginLeft="10dp"
                android:id="@+id/im3"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:text="+"
            android:textSize="22sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/dengji5"
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="刷处方单"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_toRightOf="@+id/dengji5"
                android:src="@drawable/dagou"
                android:layout_marginLeft="10dp"
                android:id="@+id/im4"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="160dp"
                android:id="@+id/tt1"
                android:layout_centerInParent="true"
                android:background="@drawable/zhongkong"
                android:gravity="center_vertical"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/shenpiren"
                    android:textSize="18sp"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/write"
                    android:layout_width="130dp"
                    android:layout_height="46dp" />

                <ImageView
                    android:src="@drawable/xiangxia"
                    android:layout_width="20dp"
                    android:layout_marginRight="6dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <ImageView
                android:layout_toRightOf="@+id/tt1"
                android:src="@drawable/dagou"
                android:id="@+id/im5"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/ddd"
            android:src="@drawable/kkjkj"
            android:layout_marginTop="16dp"
            android:layout_width="40dp"
            android:layout_height="44dp" />


        <Button
            android:background="@drawable/jiaohu10"
            android:layout_width="180dp"
            android:textSize="18sp"
            android:id="@+id/shangchuan"
            android:gravity="center"
            android:text="上传购药记录"
            android:textColor="@color/colorBar_bg"
            android:layout_marginTop="20dp"
            android:layout_height="48dp" />

    </LinearLayout>




</LinearLayout>
